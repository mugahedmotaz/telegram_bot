# إعدادات بوت التلجرام
# احصل على التوكن من @BotFather في تلجرام
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# مجلد التحميل المؤقت
DOWNLOAD_DIR=./downloads

# الحد الأقصى لحجم الملف (بالميجابايت)
# تلجرام يدعم حتى 2GB، لكن الأفضل تحديد حد أقل
MAX_FILE_SIZE=50

# عدد الفيديوهات المسموح تحميلها في المرة الواحدة من قائمة التشغيل
# قيمة أعلى = استهلاك ذاكرة ووقت أكثر
MAX_PLAYLIST_SIZE=10

# إعدادات اختيارية متقدمة

# مهلة التحميل (بالثواني)
DOWNLOAD_TIMEOUT=300

# جودة افتراضية للفيديو
DEFAULT_VIDEO_QUALITY=720p

# جودة افتراضية للصوت
DEFAULT_AUDIO_QUALITY=best

# تمكين/تعطيل الرسائل التفصيلية
VERBOSE_LOGGING=true

# حذف الملفات المؤقتة تلقائياً (بالدقائق)
AUTO_CLEANUP_MINUTES=60
